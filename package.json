{
  "name": "xlex",
  "version": "1.2.1",
  "description": "A Simple lexer for XLang.",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types",
    "*"
  ],
  "author": "XLor",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "yarn tsc",
    "lint": "yarn prettier --parser typescript --write src/**/*.ts",
    "test": "yarn jest"
  },
  "bin": {
    "xlex": "dist/cli.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/XLex.git"
  },
  "keywords": [
    "lexer",
    "compiler"
  ],
  "devDependencies": {
    "@types/graphviz": "^0.0.30",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "cac": "^6.5.6",
    "graphviz": "^0.0.9",
    "random-js": "^2.1.0"
  }
}
